<%= form_for(task) do |f| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% task.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :status, 'ステータス' %>
  <%= f.select  :status, [["未対応", "未対応"], ["処理中", "処理中"], ["処理済み", "処理済み"], ["完了", "完了"], ["1234567890", "1234567890"], ["1234567890a", "1234567890a"]],  :include_blank => true %>

  <%= f.label :content, 'タスク' %>
  <%= f.text_field :content %>

  <%= f.submit '登録' %>
<% end %>
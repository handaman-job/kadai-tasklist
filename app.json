{
  "addons": [
    "heroku-postgresql"
  ],
  "buildpacks": [
    {
      "url": "heroku/ruby"
    }
  ],
  "env": {
    "DONT_INHERIT_THIS_CONFIG_VAR": "production",
    "HOGE": "fuga"
  },
  "formation": {
    "web": {
      "quantity": 1
    }
  },
  "name": "kadai-tasklist",
  "scripts": {
    "postdeploy": "bundle exec rails db:migrate db:seed"
  },
  "stack": "heroku-18",
  "environments": {
    "test": {
      "env": {
        "DONT_INHERIT_THIS_CONFIG_VAR": "production"
      },
      "addons": [
        "heroku-postgresql"
      ],
      "scripts": {
        "test-setup": "bundle exec rails db:seed"
      }
    }
  }
}

